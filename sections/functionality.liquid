{{ 'section-functionality.css' | asset_url | stylesheet_tag }}
{{ 'toogle-switch.js' | asset_url | script_tag }}


<div class="container section-vertical-space">
            <h1 class="{{ settings.heading_size }}" {{ block.shopify_attributes }}>{{ section.settings.heading | escape }}</h1>
            <p class="subtitle">Phone off you see it | Phone on, it disappears.</p>
            <img id="iphone" class="device" loading="lazy" src="{{ 'main-iphone-off.png' | asset_url }}" alt="" />
            <div class="toggle-checkbox-wrapper">
                <input onchange="onSwitchToggle()" class="toggle-checkbox" type="checkbox" id="toggle">
                <label class="slider" for="toggle">
                </label>
              </div>
              <p class="click-tag">Click Me</p>
  </div>
</div>

{% schema %}
{
  "name": "Product Functionality",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.rich-text.blocks.heading.settings.heading.label",
      "default": "How Does it Work?"
    }
],
  "presets": [
    {
      "name": "Functionality"
    }
  ]
}
{% endschema %}
