{{ 'section-reviews.css' | asset_url | stylesheet_tag }}

<div class="review-container">
    <div class="{% unless section.settings.full_width %}page-width{% endunless %}">
            <h1 class="{{ settings.heading_size }}" {{ block.shopify_attributes }}>{{ section.settings.heading | escape }}</h1>
            <!-- {% render 'judgeme_widgets', widget_type: 'judgeme_review_widget', concierge_install: false, product: product %} -->
            </div>
</div>


{% schema %}
{
  "name": "Reviews",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.rich-text.blocks.heading.settings.heading.label",
      "default": "Reviews"
    }
],
  "presets": [
    {
      "name": "Reviews"
    }
  ]
}
{% endschema %}