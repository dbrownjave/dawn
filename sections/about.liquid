{{ 'section-about.css' | asset_url | stylesheet_tag }}
{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}


<div class="section-container">
            <div>
               {%- for block in section.blocks -%}
               {%- case block.type -%}
               {%- when 'heading' -%}
               <h1 class="{{ block.settings.heading_size }}">{{ block.settings.heading | escape
                   }}</h1>
                   {%- endcase -%}
                   {%- endfor -%}
           </div>
            <div class="team-container">
                  {%- for block in section.blocks -%}
                  {%- case block.type -%}
                  {%- when 'member' -%}
                  <div class="member-container">
                    <div>
                        {%- if block.settings.avatar != blank -%}
                        <img class="avatar" src="{{ block.settings.avatar | img_url: '1500x' }}"loading="lazy" />
                        {%- else -%}
                        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                        {%- endif -%}
                    </div>
                    <div class="details">
                    <h1>{{ block.settings.name }}</h1>
                    <p class="career"><b>{{ block.settings.career }}</b></p>
                    <p>{{ block.settings.bio }}</p>
                </div>
                  </div>
                  {%- endcase -%}
                  {%- endfor -%}
            </div>
    </div>


{% schema %}
{
    "name": "About",
    "blocks": [
       {
          "type": "heading",
          "name": "Heading",
          "limit": 1,
          "settings": [
             {
                "type": "text",
                "id": "heading",
                "default": "Title",
                "label": "Title"
             }
            ]
             },
             {
               "type": "member",
               "name": "Member",
               "settings": [
                   {
                       "type": "image_picker",
                       "id": "avatar",
                       "label": "Avatar"
                   },
               {
                  "type": "text",
                  "id": "name",
                  "label": "Name"
              },
               {
                   "type": "text",
                   "id": "career",
                   "label": "career"
               },
               {
                "type": "text",
                "id": "bio",
                "label": "Bio"
            }  
            ]
       }
    ],
    "presets": [
       {
          "name": "About",
          "blocks": [
             {
                "type": "heading"
             }
          ]
       }
    ]
 }
{% endschema %}